<h1>Signup</h1>

<%= form_with model: @driver, url: drivers_path, method: :post do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit 'Sign Up' %>
  </div>
<% end %>

<%= link_to 'Back to Login', new_driver_session_path %>
